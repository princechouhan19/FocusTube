{
  "manifest_version": 3,
  "name": "FocusTube - Productivity & Distraction Control",
  "version": "1.0.0",
  "description": "Take control of YouTube: block distractions, hide ads, and boost your productivity with advanced UI controls.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.mistral.ai/*",
    "https://api.deepseek.com/*",
    "https://api.x.ai/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": [
        "src/content/storage.js",
        "src/content/dom-helpers.js",
        "src/content/time-blocker.js",
        "src/content/ad-blocker.js",
        "src/content/shorts-blocker.js",
        "src/content/autoplay-controller.js",
        "src/content/quality-controller.js",
        "src/content/home-controller.js",
        "src/content/navigation-controller.js",
        "src/content/header-controller.js",
        "src/content/summary-button.js",
        "src/content/video-player-controller.js",
        "src/content/keyword-blocker.js",
        "src/content/channel-blocker.js",
        "src/content/url-blocker.js",
        "src/content/auto-pause.js",
        "src/content/theater-mode.js",
        "src/content/metrics-hider.js",
        "src/content/css-filter.js",
        "src/content/comment-hider.js",
        "src/content/cards-hider.js",
        "src/content/content.js"
      ],
      "css": ["src/content/content.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/*"],
      "matches": ["https://*.youtube.com/*"]
    },
    {
      "resources": ["src/icons/*"],
      "matches": ["https://*.youtube.com/*"]
    }
  ]
}
